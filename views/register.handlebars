<div class="jumbotron jumbotron-fluid" id="register-jumbo">
    <div class="container" id="jumbotron">
        <h1 class="display-4">CriShipped</h1>
        <p class="lead">A resource for finding and distributing limited supplies during emergencies.</p>
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="#" id="go">Sign up</a>
        </p>
    </div>
</div>
<div class="register-container">
    <h1>Register</h1>
    {{> messages}}
    <form id="register" action="/register" method="POST">
        <div class="grid-container">
            <div><strong>Name</strong></div>
            <div></div>
            <div class="form-group">
                <label for="firstName">First:</label>
                <input type="text" value="{{ firstName }}" class="form-control" name="firstName" id="firstName"
                    required>
            </div>
            <div class="form-group">
                <label for="lastName">Last:</label>
                <input type="text" value="{{ lastName}}" class="form-control" name="lastName" id="lastName" required>
            </div>
        </div>
        <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" class="form-control" name="username" id="username" required>
        </div>
        <div class="form-group">
            <label for="username">Email:</label>
            <input type="email" class="form-control" name="email" id="email" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" name="password" id="password" required>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
    <p>
        Already registered? <a href="/login">Login</a>
    </p>

</div>
<script src="/js/register.js"></script>