<style>
    body {
        background-image: url();
        background: url("/images/flood.jpg");
        background-size: cover;
        background-position-y: top;
    }
</style>
<div class="login-container">
    <h1>CriShipped Login</h1>

    {{#each messages.error}}
    <div class="alert alert-danger" role="alert">{{this}}</div>
    {{/each}}

    {{#each messages.success}}
    <div class="alert alert-success" role="alert">{{this}}</div>
    {{/each}}

    <form id="login" action="/login" method="POST">
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" name="username" id="username" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" name="password" id="password" required>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        <p>
            Don't have an account? <a href="/register">Register</a>
        </p>
    </form>


</div>