<style>
    body {
        color: azure;
    }

    body::after {
        content: "";
        background: url("/images/flood.jpg");
        background-size: cover;
        background-position-y: top;
        opacity: 0.5;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        position: absolute;
        z-index: -1;
    }
</style>
{{> nav}}
<div class="container">
    <h1>{{ firstName }} {{ lastName }}'s dashboard</h1>
    <div class="grid-container">
        <a href="/myaccount">
            <div class="card mt-4" id="card">
                <div class="card-body">
                    <h5 class="card-title">Edit your account</h5>
                    <p>Change profile features such as your name, location, supplies needed, and supplies offered </p>
                </div>
            </div>
        </a>
        <a href="/users/{{ username }}">
            <div class="card mt-4" id="card">
                <div class="card-body">
                    <h5 class="card-title">View your profile</h5>
                    <p>Your profile is a way of sharing with other crishipped users your location, supplies that you
                        need or have to offer</p>
                </div>
            </div>
        </a>
        {{#if city}}
        <a href="/">
            <div class="card mt-4" id="card">
                <div class="card-body">
                    <h5 class="card-title">{{city}} Infomation</h5>
                    <p>Connect with users in {{city}}, {{state}}</p>
                </div>
            </div>
        </a>
        {{/if}}
        {{#each cards}}
        <a href="/">
            <div class="card mt-4" id="card">
                <div class="card-body">
                    <h5 class="card-title">{{this.card_title}}</h5>
                    <p>{{this.description}}</p>
                </div>
            </div>
        </a>
        {{/each}}
    </div>
</div>
<br><br><br><br>