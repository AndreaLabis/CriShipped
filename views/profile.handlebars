{{> nav}}
<div class="container">
    {{#each messages.error}}
    <div class="alert alert-danger" role="alert">{{this}}</div>
    {{/each}}

    {{#each messages.success}}
    <div class="alert alert-success" role="alert">{{this}}</div>
    {{/each}}
    {{#if username }}
    <h2>{{ name }}'s profile</h2>
    <table class="table">
        <tr>
            <td>Username: </td>
            <td>{{ username }}</td>
        </tr>
        <tr>
            <td>Location:</td>
            <td>{{ location }} </td>
        </tr>
        <tr>
            <td>Supplies I need:</td>
            <td>{{ suppliesNeeded }} </td>
        </tr>

        <tr>
            <td>Supplies I am offering:</td>
            <td>{{ suppliesOffered}} </td>
        </tr>

    </table>
    {{/if}}
</div>